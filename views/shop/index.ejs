<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="./css/bootstrap.min.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <div class="container">
            <% if(prods.length > 0) { %>
                <div class="row">
                    <% for(let product of prods) { %>
                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                            <div class="card mb-5" style="width: 20rem;">
                                <img src="https://www.bookgeeks.in/wp-content/uploads/2022/11/The-Art-of-War-by-Sun-Tzu-Book.jpg" class="card-img-top img-fluid" alt="<%= product.title %>">
                                <img src="<%= product.imgUrl %>" class="card-img-top img-fluid" alt="<%= product.title %>">
                                <div class="card-body">
                                    <h2 class="card-title"> <b> <%= product.title  %> </b></h2>
                                    <h3 class="product__price">$<%= product.price %> </h3>
                                    <p class="card-text"><%= product.description %> </p>
                                    <a href="#" class="btn btn-primary">Add To Cart</a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>    
            <% } else { %>
                <h1> No Products Found!</h1>  
            <% } %>
        </div>
    </main>
<%- include('../includes/end.ejs') %>